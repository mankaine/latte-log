<h1 class='page-title'>Save New Post</h1>
<div class='videos-page-container'>
  <%= form_with model: @report, local: true do |form| %>
    <p>
      <%= form.label :time_coffee_made %><br>
      <%= select_date Date.today, { order: [:month, :day, :year] }, { class: 'date-picker' } %>
    </p>
    <p>
      <%= form.label :notes %><br />
      <%= form.text_area :notes, class: 'free-text-entry-form' %><br>
    </p>
    <p>
      <%= form.hidden_field :picture_cache %>
      <%= form.file_field :picture %>
    </p>
    <div class='new-button-container'>
      <p class='create-button-container'>
        <%= form.submit 'Save', class: 'create-button' %><br>
      </p>
      <p class='cancel-button-container'>
        <%= link_to 'Cancel', :back, class: 'cancel-button' %><br>
      </p>
    </div>
  <% end %>
</div>
