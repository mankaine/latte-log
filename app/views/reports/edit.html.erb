<h1 class='page-title'>Edit Post</h1>
<div class='videos-page-container'>
  <%= form_with model: @report, local: true do |form| %>
    <p>
      <%= form.label :time_coffee_made %><br>
      <%= select_date @report.coffee_made_at, { order: [:month, :day, :year] }, { class: 'date-picker' } %>
    </p>
    <div class='report-edit-container'>
      <div class='report-picture'>
        <% if @report.picture.file.present? %>
            <%= cl_image_tag(@report.picture.url(:edit_view) , :class => 'picture') %>
        <% else %>
          <p>
            <%= form.hidden_field :picture_cache %>
            <%= form.file_field :picture %>
          </p>
        <% end %>
      </div>
      <div class='report-notes'>
        <p>
          <%= form.label :notes %><br />
          <%= form.text_area :notes, class: 'free-text-entry-form' %><br>
        </p>
      </div>
    </div>
    <div class='new-button-container'>
      <p class='create-button-container'>
        <%= form.submit 'Save', class: 'create-button' %><br>
      </p>
      <p class='cancel-button-container'>
        <%= link_to 'Cancel', :back, class: 'cancel-button' %><br>
      </p>
      <p class='delete-button-container'>
        <%= link_to 'Delete', report_path(@report), class: 'delete-button',
            method: :delete, data: { confirm: 'Are you sure?'} %><br />
      </p>
    </div>
  <% end %>
</div>
