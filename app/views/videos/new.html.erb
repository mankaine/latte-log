<h1 class='page-title'>Note New Video</h1>
<div class='videos-page-container'>
  <%= form_with model: @video, local: true do |form| %>
    <p class='video-link-entry-form'>
      <%= form.label :video_link %><br />
      <% if @video.errors and @video.errors.key? 'url' %>
        <%= "Error: #{@video.errors['url'].first} :(" %>
      <% end %>
      <%= form.text_field :url, class: 'text-field-form' %><br>
    </p>
    <p>
      <%= form.label :title %>
      <%= form.text_field :title, class: 'text-field-form' %><br>
    </p>
    <p>
      <%= form.label :notes %><br />
      <%= form.text_area :notes, class: 'free-text-entry-form' %><br>
    </p>
    <div class='new-video-button-container'>
      <p class='create-video-container'>
        <%= form.submit 'Save', class: 'create-video' %><br>
      </p>
      <p class='cancel-video-container'>
        <%= link_to 'Cancel', :back, class: 'cancel-video' %><br>
      </p>
    </div>
  <% end %>
</div>

